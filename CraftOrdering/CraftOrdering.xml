<GuiXml>
	<Controls>
		<TopLevelControl name="CraftOrderingPanel" mouseEnabled="true" movable="true" hidden="true">
			<Dimensions x="400" y="400" />
			<Anchor point="CENTER" />
            <OnInitialized>
                CraftOrderingPanelInitialize()
            </OnInitialized>
			<OnMouseUp>
            </OnMouseUp>
            <Controls>
                <Backdrop mouseEnabled="true" name="$(parent)BG" inherits="ZO_ThinBackdrop" movable="true"/>
                <Label name="$(parent)Counter" mouseEnabled="true" font="ZoFontWindowTitle" color="CFDCBD" wrapMode="ELLIPSIS" verticalAlignment="TOP" text="Craft Ordering">
                  	<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="15" />
                </Label>
                <Button name="$(parent)ButtonCloseAddon" inherits="ZO_ButtonBehaviorClickSound">
					<Dimensions x="40" y="40" />
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="15" />
					<Textures normal="EsoUI/Art/Buttons/closebutton_up.dds"
						pressed="EsoUI/Art/Buttons/closebutton_down.dds"
						mouseOver="EsoUI/Art/Buttons/closebutton_mouseover.dds"
						disabled="EsoUI/Art/Buttons/closebutton_disabled.dds"/>
					<OnClicked>
						CraftOrderingPanelShow()
					</OnClicked>
				</Button>
            </Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>